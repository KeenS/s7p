<configuration>
  <appender name="BIDRESPONSE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>bidresponse.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>bidresponse.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%m%n</pattern>
    </encoder>
  </appender>
  <appender name="WINNOTICE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>winnotice.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>winnotice.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%m%n</pattern>
    </encoder>
  </appender>
  <appender name= "STDOUT" class= "ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>
  <logger name="s7p.slave.log.bidresponse" level="INFO">
    <appender-ref ref="BIDRESPONSE_FILE" />
  </logger>
  <logger name="s7p.slave.log.winnotice" level="INFO">
    <appender-ref ref="WINNOTICE_FILE" />
  </logger>
  <root level= "debug">
    <appender-ref ref= "STDOUT" />
  </root>
</configuration>

